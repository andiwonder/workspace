
public class Fuel_injection {
	public static void main(String[] args){
        String n = "15121231";
        BigInteger reallyBig = new BigInteger(n)
		int num = Integer.parseInt(n.trim());
		int counter = 0;
		while (num >= 2){
			if (num % 2 == 0){
				counter = counter + 1;
				num = num / 2;
			} else if (((num + 1) / 2) % 2 == 0){
				counter = counter + 2;
				num = (num+1) / 2;
			} else {
				counter = counter + 2;
				num = (num-1) / 2;
			}
		}
		num = num + 1;
	}
}
