
public class Fuel_injection {
	public static void main(String[] args){
		int n = 63;
		int counter = 0;
		while (n > 0){
			if (n % 2 == 0){
				counter++;
				n = n / 2;
			} else if ((n + 1) % 2 == 0){
				counter = counter + 2;
				n = (n+1) / 2;
			} else {
				counter = counter + 2;
				n = (n-1) / 2;
			}
		}
		System.out.println("counter is " + counter);
	}
}
