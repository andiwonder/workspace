import java.math.BigInteger;

public class Fuel_injection {
	public static void main(String[] args){
        String n = "15121231";
        BigInteger num = new BigInteger(n);
		int counter = 0;
		BigInteger num2 = new BigInteger("2");
		while (num.compareTo(num2) >= 0){
			if (num.mod(new BigInteger("2")).equals(BigInteger.ZERO)){
				counter = counter + 1;
				num = num.divide("2");
			} else if (((num + 1) / 2) % 2 == 0){
				counter = counter + 2;
				num = (num+1) / 2;
			} else {
				counter = counter + 2;
				num = (num-1) / 2;
			}
		}
		counter = counter + 1;
//		return counter;
	}
}
