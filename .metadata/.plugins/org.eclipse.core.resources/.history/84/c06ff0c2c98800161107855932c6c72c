import java.math.BigInteger;

public class Fuel_injection {
	public static void main(String[] args){
        String n = "15121231";
        BigInteger num = new BigInteger(n);
		int counter = 0;
		while (num.compareTo(2) >= 2){
			if (num % 2 == 0){
				counter = counter + 1;
				num = num / 2;
			} else if (((num + 1) / 2) % 2 == 0){
				counter = counter + 2;
				num = (num+1) / 2;
			} else {
				counter = counter + 2;
				num = (num-1) / 2;
			}
		}
		counter = counter + 1;
//		return counter;
	}
}
