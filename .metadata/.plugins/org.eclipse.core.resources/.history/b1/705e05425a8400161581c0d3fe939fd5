	public String baseToDecimal(String num){
		return Integer.toString(Integer.parseInt(num, 3), 10);
	}
	
	public String decimalToBase(String num){
		return Integer.toString(Integer.parseInt(num, 3));
	}
	
	public static List<Integer> digitToArray(String n, int len) {
		int id = Integer.parseInt(n); 
		List<Integer> digits = new LinkedList<Integer>(); 
		while (id > 0) {
		    digits.add(0,id%10);
		    id = id/10;
		}
		if (digits.size() < len){
			for (int i= digits.size(); i <= len -1; i++){
				digits.add(i, 0);
			}
		}
		return digits;
	}

	
	public static int Rem(List<Long> digits , int len) {
		List<Long> digits2 = new ArrayList<Long>();
		for (Long item : digits) {
			digits2.add(item);
		}
		Collections.sort(digits);
		Collections.sort(digits2, Collections.reverseOrder());
		String xval = "";
		String yval = "";
		for (int i = 0;i < len; i++) {
			xval = xval + (digits.get(i));
			yval = yval + (digits2.get(i));
		}
		int answer = Integer.parseInt(yval, 10) - Integer.parseInt(xval,10);
//		System.out.println(answer);
		return answer;
	}
	
}
