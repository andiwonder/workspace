
public class Fuel_injection {
	public static void main(String[] args){
		int n = 63;
		int counter = 0;
		while (n >= 2){
			System.out.println("n was " + n);
			System.out.println("counter is " + counter);
			if (n % 2 == 0){
				counter = counter + 1;
				n = n / 2;
			} else if (((n + 1) / 2) % 2 == 0){
				counter = counter + 2;
				n = (n+1) / 2;
			} else {
				counter = counter + 2;
				n = (n-1) / 2;
			}
		}
	}
}
